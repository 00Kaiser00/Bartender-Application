generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Cocktail {
  id Int @id @default(autoincrement())
  name String @unique
  desc String
  price Float
  menu Menu @relation(fields: [id], references: [id])
}

model Menu {
  id       Int     @id @default(autoincrement())
  cocktails Cocktail[]
}

model Order {
  id Int @id @default(autoincrement())
  cockTailId Int
  customerName String
}